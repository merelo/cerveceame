<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/consultaButton"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:background="@drawable/cervebuscar"
                android:onClick="consulta" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="50pt"
                android:layout_height="40dp"
                android:text="Consultar\ncervezas"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/anadirButton"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:background="@drawable/cervemas"
                android:onClick="anadir" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50pt"
                android:layout_height="40dp"
                android:text="Añadir\ncerveza"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp">

            <ImageButton
                android:id="@+id/favoritasButton"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:background="@drawable/star5"
                android:onClick="favoritas" />
            <TextView
                android:layout_width="50pt"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Favoritas"
                android:id="@+id/textView3"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <ImageButton
                android:id="@+id/quienButton"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:background="@drawable/recsys"
                android:onClick="recomendadas" />

            <TextView
                android:layout_width="50pt"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cervezas recomendadas"
                android:id="@+id/textView5"
                android:textAlignment="center"  />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp">

            <ImageButton
                android:id="@+id/estadisticaButton"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:background="@drawable/stats"
                android:onClick="estadisticas" />

            <TextView
                android:layout_width="50pt"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Estadísticas"
                android:id="@+id/textView6"
                android:textAlignment="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:background="@drawable/actualizar"
                android:onClick="buscarActualizacion" />

            <TextView
                android:layout_width="50pt"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Buscar\nactualización"
                android:id="@+id/textView7"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>