<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/datosCerves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="5"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:text="HOLA HOLITA"/>

        <Button
            android:id="@+id/botonCopiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:onClick="copiar"
            android:layout_margin="10dp"
            android:text="Copiar en portapapeles"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar por correo"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="correo"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Copia la lista de cervezas pulsando el botón. A continuación introdúcelo en un otro teléfono en el menú principal 'Añadir copia de cervezas' y se actualizarán las cervezas con la puntuación dada.
    Para compartir las puntuaciones puedes enviarlas por correo/whatsapp al otro móvil." />
    </LinearLayout>
</ScrollView>