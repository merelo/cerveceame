<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Esta aplicación ha sido desarrollada por \nMiguel Merelo Hernández\n\nNo hay ningún interés comercial"
                android:textAlignment="center"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/twitter"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:onClick="twitter"
                android:layout_margin="5dp"
                android:src="@drawable/twitter"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/linkedin"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:onClick="linkedin"
                android:layout_margin="5dp"
                android:src="@drawable/linkedin"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/developer"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:onClick="developer"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/developer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Developer info"
                android:id="@+id/textView7"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>